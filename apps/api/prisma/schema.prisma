enum PatientType {
  INPATIENT
  OUTPATIENT
}

enum SlotStatus {
  BOOKED
  COMPLETED
  NO_SHOW
  CANCELLED
}

// ── 치료사 ──
model Therapist {
  id           String   @id @default(uuid())
  name         String   @unique
  specialty    String?
  isActive     Boolean  @default(true)
  workSchedule Json?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  deletedAt    DateTime?

  manualTherapySlots ManualTherapySlot[]
}

// ── 도수예약 슬롯 ──
model ManualTherapySlot {
  id             String            @id @default(uuid())
  therapistId    String
  therapist      Therapist         @relation(fields: [therapistId], references: [id])
  patientId      String
  patient        Patient           @relation(fields: [patientId], references: [id])
  date           DateTime          @db.Date
  timeSlot       String
  duration       Int               @default(30)
  treatmentCodes String[]
  sessionMarker  String?
  patientType    PatientType       @default(INPATIENT)
  status         SlotStatus        @default(BOOKED)
  notes          String?
  source         AppointmentSource @default(INTERNAL)
  chatSessionId  String?
  version        Int               @default(0)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  deletedAt      DateTime?

  @@unique([therapistId, date, timeSlot])
  @@index([date, status])
  @@index([patientId])
}

