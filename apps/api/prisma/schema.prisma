  chatSessionId String?
  version       Int               @default(0)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  deletedAt     DateTime?

  evaluations   RfTreatmentEvaluation[] // Phase 8E

  @@index([roomId, date])
  @@index([patientId, date])
  @@index([date, status])
  @@index([doctorId])
